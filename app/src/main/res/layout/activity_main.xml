<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orienttation="vertical"
    android:background=" @drawable/rectangle_13"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ImageView2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="100dp"
        app:srcCompat="@drawable/icon_login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="login"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="110dp"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:layout_marginleft="32dp"
            app:layout_constraintStart_toStart0f="parent"
            app:layout_constraintTop_toTop0f="parent">


             <ImageView
                 android:id="@+id/ImageView3"
                 android:layout_width="23dp"
                 android:layout_height="23dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintTop-toTop0f="parent"
                 app:scrCompat="@drawable/group_2" />

             <EditText
                 android:id="@+id/username"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="100dp"
                 android:layout_marginTop="3dp"
                 android:hint="username"
                 android:textColor="@color/white" />

             <ImageView
                 android:id="@+id/password"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="30dp"
                 android:layout_marinRight="30dp"
                 android:layout_marginTop="50do"
                 android:ems="18"
                 android:hint="password"
                 android:inputType="textPassword" />

             <ImageButton
                 android:id="@+id/login"
                 android:layout_width="294dp"
                 android:layout_height="58dp"
                 android:layout_gravity="center"
                 app:srcCompat="@drawable/icon_login" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="Login"
                 android:textColor="color/white"
                 android:textSize="30dp"
                 android:layout_marginTop="185dp"/>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Lupa password ?"
                 android:id="@+id/lupapassword"
                 android:textColor=" @color/red"
                 android:textSize="18dp"
                 android:textAlignment="center"
                 android:layout_marginTop="230dp"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Lupa password ?"
                 android:id="@+id/lupapassword"
                 android:textSize="18dp"
                 android:layout_marginLeft="48dp"
                 android:layout_marginTop="230dp" />

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Daftar"
                 android:id="@+id/lupapassword"
                 android:textSize="18dp"
                 android:layout_margiLeft="250dp"
                 android:layout_marginTop="230dp"/>
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="200dp"
                 app:srcCompat="@drawable/icon_login"
                 android:layout_marginRight="30dp"/>



















</LinearLayout>